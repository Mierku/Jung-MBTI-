.compatibility-container {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  min-height: 100vh;
  background-color: #fafafa;
}

.header {
  display: flex;
  align-items: center;
  height: 182rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.form-container {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.type-selector {
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  height: 80rpx;
  overflow: hidden;
}

.picker-content {

  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  height: 100%;
}

.selected-type {
  font-size: 30rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

.analyze-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  height: 88rpx;
}

.analyze-btn[disabled] {
  background: linear-gradient(135deg, #b8c4fb, #d2bfea);
  color: rgba(255, 255, 255, 0.8);
}

/* 结果区域样式 */
.result-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-top: 20rpx;
}

.result-header {
  margin-bottom: 30rpx;
}

.result-types {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.my-type,
.partner-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  background-color: #f0f0f0;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  min-width: 120rpx;
  text-align: center;
}

.compatibility-score {
  font-size: 48rpx;
  font-weight: bold;
  color: #a777e3;
}

.compatibility-chart {
  margin-bottom: 40rpx;
}

.progress-bar {
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #6e8efb, #a777e3);
  border-radius: 10rpx;
}

.compatibility-label {
  text-align: center;
  font-size: 28rpx;
  color: #a777e3;
  font-weight: 500;
}

.compatibility-details,
.compatibility-advice,
.compatibility-challenges {
  margin-bottom: 30rpx;
}

.detail-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.detail-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}